                                "value": "{{$guid}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 50.00\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/withdrawals",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "withdrawals"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Withdrawal",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/withdrawals/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "withdrawals",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "List Withdrawals",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/withdrawals?limit=20&offset=0",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "withdrawals"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "offset",
                                    "value": "0"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "Get User Balance",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/users/{{user_id}}/balance",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "users",
                                "{{user_id}}",
                                "balance"
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Transactions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/users/{{user_id}}/transactions?limit=20&offset=0",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "users",
                                "{{user_id}}",
                                "transactions"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "offset",
                                    "value": "0"
                                },
                                {
                                    "key": "status",
                                    "value": "success",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Webhooks",
            "item": [
                {
                    "name": "Bank Callback",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "// Get the secret from environment or variable",
                                    "const secret = 'your-webhook-secret-change-in-production';",
                                    "",
                                    "// Get raw body",
                                    "let rawBody = request.data;",
                                    "let payload = JSON.parse(rawBody);",
                                    "",
                                    "// Remove signature if present to calculate hash",
                                    "delete payload.signature;",
                                    "",
                                    "// Canonicalize JSON (sort keys)",
                                    "// Detailed implementation to match Python's separators=(',', ':') and sort_keys=True",
                                    "const canonicalPayload = JSON.stringify(payload, Object.keys(payload).sort());",
                                    "",
                                    "// Generate HMAC-SHA256",
                                    "const signature = CryptoJS.HmacSHA256(canonicalPayload, secret).toString();",
                                    "",
                                    "// Update the request body with the new signature",
                                    "payload.signature = signature;",
                                    "pm.request.body.raw = JSON.stringify(payload, null, 2);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"transaction_id\": 1,\n  \"bank_reference\": \"BANK-REF-123\",\n  \"status\": \"success\",\n  \"error_message\": null,\n  \"signature\": \"will-be-generated-automatically\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/webhooks/bank-callback",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "webhooks",
                                "bank-callback"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "System",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
