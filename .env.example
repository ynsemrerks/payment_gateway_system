# Database
DATABASE_URL=postgresql://payment_user:payment_pass@db:5432/payment_gateway
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Payment Gateway API
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
WEBHOOK_SECRET=your-webhook-secret-change-in-production

# Rate Limiting
RATE_LIMIT_BALANCE_PER_MIN=10
RATE_LIMIT_TRANSACTIONS_PER_MIN=20
RATE_LIMIT_GLOBAL_PER_MIN=1000

# Bank Simulation
BANK_MIN_DELAY_SECONDS=2
BANK_MAX_DELAY_SECONDS=10
BANK_SUCCESS_RATE=0.9

# Celery
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300

# Idempotency
IDEMPOTENCY_KEY_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=INFO
